@model List<KeyValuePair<string, List<CinephilesChoice.Models.YearCategoryModel>>>

@{
    ViewData["Title"] = "Navigate To Awards";
    if (User.Identity.IsAuthenticated)
    {
        Layout = "~/Views/Shared/_Layout_Cinephile.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<h1>Navigate to an Award</h1>

<div>
    @for(int i = 0; i < Model.Count; i++)
    {
        <button class="btn-light p-2 rounded" id='year-@i' onclick="displayAwardCategories('awards-@i')">@Model[i].Key</button>
        <div class="row" id='awards-@i' style="display:none;">
            @for(int j = 0; j < Model[i].Value.Count; j++)
            {
                <div class="col-md-4">
                    <a asp-action="DisplayNominations" asp-route-year="@Model[i].Value[j].Year" asp-route-category="@Model[i].Value[j].Category">@Model[i].Value[j].Category</a>
                </div>
            }
        </div>
    }
</div>
