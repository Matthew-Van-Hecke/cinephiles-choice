@model CinephilesChoice.Models.Movie

@{
    ViewData["Title"] = "MovieRecommendation";
    Layout = "~/Views/Shared/_Layout_Cinephile.cshtml";
}

<h1>MovieRecommendation</h1>

<div class="col-sm-6 col-md-4 col-lg-3 movie-poster-container">
    <img class="movie-poster" src="@Model.Poster" alt="@Model.Title" />
    <div class="movie-poster-overlay">
        <div>
            <h6>Title: @Model.Title</h6>
            <h6>Directed by: @Model.Director</h6>
            <h6>Starring: @Model.Actors</h6>
        </div>
    </div>
</div>

